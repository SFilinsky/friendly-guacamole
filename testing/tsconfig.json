{
  "compilerOptions": {
    "baseUrl": "node_modules",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}
