{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "babylonjs"
  ],
  "typedocOptions": {
    "entryPoints": ["src/core.ts"],
    "out": "docs/typedoc",
    "theme": "minimal"
  }
}
