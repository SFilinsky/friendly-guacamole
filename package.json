{
  "name": "@worldscapes/engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.1",
  "description": "Data-driven framework for game development",
  "homepage": "https://github.com/SFilinsky/worldscapes-engine/wiki/About-Engine",
  "keywords": [
    "worldscapes",
    "game",
    "engine",
    "babylonjs"
  ],
  "author": {
    "name": "Siarhei Filinski",
    "email": "sfilisnky@gmail.com"
  },
  "license": "ISC",
  "scripts": {
    "clear": "del-cli --force ./dist",
    "clear:testing": "del-cli --force ./dist-testing",

    "build": "tsc",
    "build:docs": "typedoc",

    "start": "nodemon --config .nodemon/nodemon.json",
    "start:clean": "npm run clear && npm run start",


    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts --f table",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "dependencies": {
    "@types/node": "^15.12.2",
    "@types/ws": "^8.2.2",
    "del-cli": "^4.0.0",
    "ws": "^8.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  }
}
