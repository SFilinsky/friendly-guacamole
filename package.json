{
  "name": "@worldscapes/root",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/SFilinsky/worldscapes-engine/wiki/About-Engine",
  "keywords": [
    "worldscapes",
    "game",
    "engine",
    "babylonjs"
  ],
  "author": {
    "name": "Siarhei Filinski",
    "email": "sfilisnky@gmail.com"
  },
  "license": "ISC",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --strict",
    "clean:all": "lerna run --parallel clean",
    "start:all": "lerna run --parallel start",
    "start:all:clean": "npm run clean:all && npm run bootstrap && npm run start:all",
    "build:all": "lerna run --parallel build",
    "build:all:clean": "npm run clean:all && npm run bootstrap && npm run build:all",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "prepare": "npm run clean:all && npm run build:all",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "versionup": "lerna version --conventional-commits",
    "versionup:patch": "lerna version patch --conventional-commits",
    "versionup:minor": "lerna version minor --conventional-commits",
    "versionup:major": "lerna version major --conventional-commits"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "del-cli": "^4.0.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lerna-update-wizard": "^1.1.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1"
  }
}
