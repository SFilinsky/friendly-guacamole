{
  "name": "@worldscapes/client",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.2",
  "description": "Worldscapes - client engine part",
  "homepage": "https://github.com/SFilinsky/worldscapes-engine/wiki/About-Engine",
  "keywords": [
    "worldscapes",
    "game",
    "engine",
    "babylonjs"
  ],
  "author": {
    "name": "Siarhei Filinski",
    "email": "sfilisnky@gmail.com"
  },
  "license": "ISC",
  "scripts": {
    "clear": "del-cli --force ./dist",
    "clear:testing": "del-cli --force ./dist-testing",
    "build": "tsc",
    "start": "nodemon --config ../../.nodemon/nodemon.json",
    "start:clean": "npm run clear && npm run start",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "lint": "eslint ./src --ext .ts --f table",
    "format": "prettier --write \"src/**/*.ts\" && prettier --write \"testing/src/**/*.ts\"",
    "prepare": "npm run clear && npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "dependencies": {
    "@worldscapes/common": "^0.0.2"
  }
}
